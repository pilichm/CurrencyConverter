<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/exchangeElementListView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ExchangeRatesActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_exc_rates_act"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark" />

    <TextView
        android:id="@+id/tvExchangeListHeader"
        android:textSize="@dimen/edit_text_amount_text_size"
        android:text="@string/app_name"
        android:gravity="center"
        android:background="@color/teal_700"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/listViewExchangeRates"
        android:background="@color/teal_700"
        android:layout_width="match_parent"
        android:layout_height="match_parent"  />

</LinearLayout>